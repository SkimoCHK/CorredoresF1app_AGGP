<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CorredoresF1app_AGGP.View.DriverView">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Pink" Padding="24" CornerRadius="0">
                <Label Text="Corredores" HorizontalTextAlignment="Center"  TextColor="White"/>
            </Frame>
            <Label Text="Registrar corredores" FontSize="Title" Padding="30,10,30,10"/>
            <Entry Placeholder="Nombre" Text="{Binding Nombre}" />
            <Entry Placeholder="Numero" Text="{Binding Numero}" />
            <Entry Placeholder="Equipo" Text="{Binding Equipo}" />
            <Button Text="Registrar" Command="{Binding InsertarCorredor}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>